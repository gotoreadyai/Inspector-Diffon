{
    "name": "inspector-diffon",
    "displayName": "Inspector Diffon",
    "description": "LLM-powered diff tool with full file operations (CREATE, DELETE, RENAME, MODIFY) and task management",
    "version": "0.1.49",
    "publisher": "gotoreadyai",
    "repository": {
        "type": "git",
        "url": "https://github.com/grzegorz/inspector-diff"
    },
    "author": {
        "name": "Grzegorz",
        "email": "gotoreadyai@gmail.com"
    },
    "license": "MIT",
    "homepage": "https://github.com/grzegorz/inspector-diff#readme",
    "bugs": {
        "url": "https://github.com/grzegorz/inspector-diff/issues"
    },
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "resources/icon.png",
    "main": "./out/extension.js",
    "activationEvents": [
        "onCommand:llmDiff.refresh",
        "onCommand:llmDiff.sendChangeRequestPrompt",
        "onCommand:llmDiff.addSelectedFilesToPrompt",
        "onCommand:llmDiff.endTask",
        "onCommand:llmDiff.onItemClicked",
        "onCommand:llmDiff.notifySelectionChanged",
        "onCommand:llmDiff.applyFromClipboard",
        "onCommand:llmDiff.applyFromActiveEditorAndClose",
        "onCommand:llmDiff.selectAll",
        "onCommand:llmDiff.deselectAll",
        "onCommand:llmDiff.selectFolder",
        "onCommand:llmDiff.setGlobPattern",
        "onCommand:llmDiff.saveSelectionAsSet",
        "onCommand:llmDiff.loadSelectionSet",
        "onCommand:llmDiff.showTaskActions",
        "onCommand:llmDiff.openTerminal",
        "onCommand:llmDiff.createTask"
    ],
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "llmDiff",
                    "title": "LLM Diff",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "llmDiff": [
                {
                    "id": "llmDiffFiles",
                    "name": "Files"
                },
                {
                    "id": "llmDiffTaskInfo",
                    "name": "Task Info"
                }
            ]
        },
        "commands": [
            {
                "command": "llmDiff.refresh",
                "title": "Refresh Files",
                "icon": "$(refresh)"
            },
            {
                "command": "llmDiff.sendChangeRequestPrompt",
                "title": "Inspector Diffon: Copy Change Request Prompt"
            },
            {
                "command": "llmDiff.addSelectedFilesToPrompt",
                "title": "Inspector Diffon: Add Selected Files to Prompt"
            },
            {
                "command": "llmDiff.endTask",
                "title": "Inspector Diffon: End Task"
            },
            {
                "command": "llmDiff.onItemClicked",
                "title": "Inspector Diffon: Toggle File Selection"
            },
            {
                "command": "llmDiff.notifySelectionChanged",
                "title": "Inspector Diffon: Notify Selection Changed"
            },
            {
                "command": "llmDiff.applyFromClipboard",
                "title": "Inspector Diffon: Apply Operations from Clipboard"
            },
            {
                "command": "llmDiff.applyFromActiveEditorAndClose",
                "title": "Inspector Diffon: Apply from Active Editor & Close"
            },
            {
                "command": "llmDiff.selectAll",
                "title": "Select All",
                "icon": "$(check-all)"
            },
            {
                "command": "llmDiff.deselectAll",
                "title": "Deselect All",
                "icon": "$(circle-slash)"
            },
            {
                "command": "llmDiff.selectFolder",
                "title": "Inspector Diffon: Select Folderâ€¦"
            },
            {
                "command": "llmDiff.setGlobPattern",
                "title": "Set File Pattern",
                "icon": "$(filter)"
            },
            {
                "command": "llmDiff.saveSelectionAsSet",
                "title": "Save Selection",
                "icon": "$(save)"
            },
            {
                "command": "llmDiff.loadSelectionSet",
                "title": "Load Selection",
                "icon": "$(folder-opened)"
            },
            {
                "command": "llmDiff.showTaskActions",
                "title": "Inspector Diffon: Show Task Actions"
            },
            {
                "command": "llmDiff.openTerminal",
                "title": "Inspector Diffon: Open Terminal UI"
            },
            {
                "command": "llmDiff.createTask",
                "title": "Inspector Diffon: Create Task"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "llmDiff.refresh",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@1"
                },
                {
                    "command": "llmDiff.setGlobPattern",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@2"
                },
                {
                    "command": "llmDiff.selectAll",
                    "when": "view == llmDiffFiles",
                    "group": "1_selection@1"
                },
                {
                    "command": "llmDiff.deselectAll",
                    "when": "view == llmDiffFiles",
                    "group": "1_selection@2"
                },
                {
                    "command": "llmDiff.saveSelectionAsSet",
                    "when": "view == llmDiffFiles",
                    "group": "2_sets@1"
                },
                {
                    "command": "llmDiff.loadSelectionSet",
                    "when": "view == llmDiffFiles",
                    "group": "2_sets@2"
                },
                {
                    "command": "llmDiff.createTask",
                    "when": "view == llmDiffTaskInfo",
                    "group": "navigation@1"
                },
                {
                    "command": "llmDiff.openTerminal",
                    "when": "view == llmDiffTaskInfo",
                    "group": "navigation@2"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "lint": "eslint src --ext ts"
    },
    "devDependencies": {
        "@types/node": "^20.11.30",
        "typescript": "^5.4.5",
        "eslint": "^8.57.0"
    }
}
