{
    "name": "inspector-diff",
    "displayName": "Inspector Diff",
    "description": "LLM-powered diff tool using SEARCH/REPLACE format for efficient code modifications",
    "version": "0.0.8",
    "publisher": "grzegorz-dev",
    "repository": {
        "type": "git",
        "url": "https://github.com/grzegorz/inspector-diff"
    },
    "author": {
        "name": "Grzegorz",
        "email": "grzegorz@choosewise.com"
    },
    "license": "MIT",
    "homepage": "https://github.com/grzegorz/inspector-diff#readme",
    "bugs": {
        "url": "https://github.com/grzegorz/inspector-diff/issues"
    },
    "keywords": [
        "llm",
        "diff",
        "ai",
        "search-replace",
        "code-modification",
        "claude",
        "gpt",
        "refactoring"
    ],
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other",
        "Programming Languages",
        "Snippets"
    ],
    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "main": "./out/extension.js",
    "activationEvents": [],
    "contributes": {
        "commands": [
            {
                "command": "llmDiff.requestDiff",
                "title": "Inspector Diff: Generate Prompt from Files",
                "category": "Inspector Diff"
            },
            {
                "command": "llmDiff.insertDiff",
                "title": "Inspector Diff: Apply Changes from LLM",
                "category": "Inspector Diff"
            },
            {
                "command": "llmDiff.refreshFiles",
                "title": "Refresh Files",
                "icon": "$(refresh)"
            },
            {
                "command": "llmDiff.selectAll",
                "title": "Select All Files",
                "icon": "$(check-all)"
            },
            {
                "command": "llmDiff.deselectAll",
                "title": "Deselect All Files",
                "icon": "$(close-all)"
            },
            {
                "command": "llmDiff.toggleFile",
                "title": "Toggle File Selection"
            },
            {
                "command": "llmDiff.onItemClicked",
                "title": "Toggle File Selection",
                "when": "false"
            },
            {
                "command": "llmDiff.generatePrompt",
                "title": "Generate LLM Prompt",
                "icon": "$(play)"
            },
            {
                "command": "llmDiff.saveSet",
                "title": "Save File Set",
                "icon": "$(save)"
            },
            {
                "command": "llmDiff.loadSet",
                "title": "Load File Set",
                "icon": "$(folder-opened)"
            },
            {
                "command": "llmDiff.setGlobPattern",
                "title": "Set File Pattern",
                "icon": "$(settings-gear)"
            },
            {
                "command": "llmDiff.selectFolder",
                "title": "Select All Files in Folder",
                "icon": "$(check)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "inspector-diff-panel",
                    "title": "Inspector Diff"
                }
            ]
        },
        "views": {
            "inspector-diff-panel": [
                {
                    "id": "llmDiffFiles",
                    "name": "Files",
                    "icon": "$(files)",
                    "contextualTitle": "Inspector Diff Files"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "llmDiffFiles",
                "contents": "No files found.\n[Set file pattern](command:llmDiff.setGlobPattern)\n[Generate prompt from selection](command:llmDiff.requestDiff)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "llmDiff.refreshFiles",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@1"
                },
                {
                    "command": "llmDiff.selectAll",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@2"
                },
                {
                    "command": "llmDiff.deselectAll",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@3"
                },
                {
                    "command": "llmDiff.generatePrompt",
                    "when": "view == llmDiffFiles",
                    "group": "navigation@4"
                },
                {
                    "command": "llmDiff.setGlobPattern",
                    "when": "view == llmDiffFiles",
                    "group": "2_settings@1"
                },
                {
                    "command": "llmDiff.saveSet",
                    "when": "view == llmDiffFiles",
                    "group": "3_sets@1"
                },
                {
                    "command": "llmDiff.loadSet",
                    "when": "view == llmDiffFiles",
                    "group": "3_sets@2"
                }
            ],
            "view/item/context": [
                {
                    "command": "llmDiff.toggleFile",
                    "when": "view == llmDiffFiles && viewItem =~ /file/"
                },
                {
                    "command": "llmDiff.selectFolder",
                    "when": "view == llmDiffFiles && viewItem == folder"
                }
            ],
            "commandPalette": [
                {
                    "command": "llmDiff.requestDiff",
                    "when": "workspaceFolderCount > 0"
                },
                {
                    "command": "llmDiff.insertDiff",
                    "when": "editorIsOpen"
                }
            ]
        },
        "keybindings": [
            {
                "command": "llmDiff.requestDiff",
                "key": "ctrl+shift+d ctrl+shift+r",
                "mac": "cmd+shift+d cmd+shift+r",
                "when": "workspaceFolderCount > 0"
            },
            {
                "command": "llmDiff.insertDiff",
                "key": "ctrl+shift+d ctrl+shift+i",
                "mac": "cmd+shift+d cmd+shift+i",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "Inspector Diff",
            "properties": {
                "inspectorDiff.defaultGlobPattern": {
                    "type": "string",
                    "default": "src/**/*.{ts,tsx,js,jsx}",
                    "description": "Default file pattern for searching files"
                },
                "inspectorDiff.excludePattern": {
                    "type": "string",
                    "default": "**/{node_modules,dist,.next,.git,build,out,coverage}/**",
                    "description": "Patterns to exclude from file search"
                },
                "inspectorDiff.autoSaveBeforeApply": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically save files before applying changes"
                },
                "inspectorDiff.showOutputChannel": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically show output channel after operations"
                },
                "inspectorDiff.groupByFolders": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show files grouped by folders in tree view"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "eslint": "^8.28.0",
        "typescript": "^4.9.5",
        "@vscode/vsce": "^2.22.0"
    }
}
