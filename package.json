{
    "name": "project-manager",
    "displayName": "Project Manager",
    "description": "ZarzÄ…dzaj projektami i zadaniami",
    "version": "0.0.48",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "contributes": {
        "commands": [
            {
                "command": "pm.openProject",
                "title": "Open Project",
                "icon": "$(folder-opened)"
            },
            {
                "command": "pm.startFromTemplate",
                "title": "Start from Template",
                "icon": "$(rocket)"
            },
            {
                "command": "pm.openTerminal",
                "title": "Open Terminal",
                "icon": "$(terminal)"
            },
            {
                "command": "pm.sendPrompt",
                "title": "Send Prompt"
            },
            {
                "command": "pm.addFiles",
                "title": "Add Files"
            },
            {
                "command": "pm.applyOperations",
                "title": "Apply Operations"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pmActivity",
                    "title": "Project Manager",
                    "icon": "$(package)"
                }
            ]
        },
        "views": {
            "pmActivity": [
                {
                    "id": "pmExplorer",
                    "name": "Projects & Files",
                    "when": "true"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "pm.openProject",
                    "when": "view == pmExplorer",
                    "group": "navigation@1"
                },
                {
                    "command": "pm.openTerminal",
                    "when": "view == pmExplorer",
                    "group": "navigation@2"
                }
            ]
        }
    }
}
