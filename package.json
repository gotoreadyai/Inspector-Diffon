{
    "name": "project-manager",
    "displayName": "Project Manager",
    "description": "ZarzÄ…dzaj projektami i zadaniami",
    "version": "0.0.16",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "contributes": {
        "commands": [
            {
                "command": "pm.toggleTaskDone",
                "title": "Toggle Task Done",
                "icon": "$(check)"
            },
            {
                "command": "pm.openProject",
                "title": "Open Project"
            },
            {
                "command": "pm.startFromTemplate",
                "title": "Start from Template"
            },
            {
                "command": "pm.clearFileSelection",
                "title": "Clear File Selection"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pmActivity",
                    "title": "Project Manager",
                    "icon": "./resources/icon.svg"
                }
            ]
        },
        "views": {
            "pmActivity": [
                {
                    "id": "pmExplorer",
                    "name": "Projekty",
                    "when": "true"
                },
                {
                    "id": "pmFiles",
                    "name": "Pliki Projektu",
                    "when": "pm.hasActiveProject"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "pm.clearFileSelection",
                    "when": "view == pmFiles",
                    "group": "navigation"
                }
            ]
        }
    }
}
