{
    "name": "project-modules-tasks",
    "displayName": "Project Modules & Tasks",
    "description": "Explorer projektów na bazie szablonów. Status zadań: todo ⇄ done.",
    "version": "1.1.9",
    "publisher": "hildebrand-demo",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onView:pmExplorer",
        "onCommand:pm.openProject",
        "onCommand:pm.startFromTemplate",
        "onCommand:pm.toggleTaskDone"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pmActivity",
                    "title": "Project Explorer",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "pmActivity": [
                {
                    "id": "pmExplorer",
                    "name": "Project Explorer"
                }
            ]
        },
        "commands": [
            {
                "command": "pm.openProject",
                "title": "Otwórz projekt z pliku",
                "icon": "$(new-folder)"
            },
            {
                "command": "pm.startFromTemplate",
                "title": "Start project from this template",
                "icon": "$(rocket)"
            },
            {
                "command": "pm.toggleTaskDone",
                "title": "Przełącz status zadania",
                "icon": "$(check)"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "pm.openProject",
                    "when": "view == pmExplorer",
                    "group": "navigation@1"
                }
            ],
            "view/item/context": [
                {
                    "command": "pm.startFromTemplate",
                    "when": "view == pmExplorer && viewItem == template",
                    "group": "inline@1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "build": "tsc -p ./",
        "watch": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/node": "^18.19.0",
        "typescript": "^5.4.0",
        "vsce": "^2.15.0"
    }
}
